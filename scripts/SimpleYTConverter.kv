#:kivy 2.1.0

MainScreen:

<MainScreen>:
    rows: 10
    canvas.before:
        Color:
            rgba: 0.047, 0.047, 0.054, 1
            
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: root.kivy_url_output
        size_hint: .5, 1
        color: 0.811, 0.811, 0.811, 1
        halign: 'center'
    Label:
        id: url_warning
        text: ""
        foreground_color: (0.811, 0.811, 0.811)
        color: .8, 0.1, 0.1, 1
        size_hint: .5, None
        height: dp(45)
    TextInput:
        id: my_text_input
        size_hint: .5, None
        color: 0.811, 0.811, 0.811, 1
        height: dp(30)
        text: ""
        foreground_color: (0.811, 0.811, 0.811)
        multiline: False
        write_tab: False
        background_color: 0.109, 0.105, 0.133, 1
        padding_x:
            [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0,
            0] if self.text else [self.center[0], 0]
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]  
    GridLayout:
        cols: 3
        size_hint: 1, None
        height: dp(32)
        Button:
            text: "Clear queue"
            background_color: 0.603, 0.098, 0.098, 1
            color: 0.811, 0.811, 0.811, 1
            on_press: root.delete_queue()
        Button:
            text: "Add to queue"
            background_color: 0.098, 0.603, 0.2, 1
            color: 0.811, 0.811, 0.811, 1
            on_press: root.add_to_queue()
        Button:
            text: "Download"
            color: 0.811, 0.811, 0.811, 1
            background_color: 0.321, 0.098, 0.603, 1
            on_press: root.run_download()
    Label:
        size_hint: .5, None
        height: dp(15)
    TextInput:
        id: my_text_input2
        size_hint: .5, None
        height: dp(30)
        text: ""
        foreground_color: (0.811, 0.811, 0.811)
        multiline: False
        write_tab: False
        background_color: 0.109, 0.105, 0.133, 1
        padding_x:
            [self.center[0] - self._get_text_width(max(self._lines, key=len), self.tab_width, self._label_cached) / 2.0,
            0] if self.text else [self.center[0], 0]
        padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 0]   
    GridLayout:
        cols: 2
        size_hint: 1, None
        height: dp(32)
        Button:
            text: "Use default directory"
            color: 0.811, 0.811, 0.811, 1
            background_color: 0.160, 0.180, 0.537, 1
            on_press: root.revert_dl_dir()
        Button:
            text: "Update download directory"
            color: 0.811, 0.811, 0.811, 1
            background_color: 0.160, 0.180, 0.537, 1
            on_press: root.update_dl_dir()
    Button:
        text: root.kivy_dir_output
        color: 0.811, 0.811, 0.811, 1
        background_color: 0.274, 0.262, 0.337, 1
        size_hint: .5, None
        height: dp(60)
        line_height: dp(1.2)
        halign: 'center'
        on_press: root.goto_path()
    Label:
        id: dir_warning
        text: ""
        foreground_color: (0.811, 0.811, 0.811)
        color: .8, 0.1, 0.1, 1
        size_hint: .5, None
        height: dp(45)
    Label: 
        size_hint: .5, None
        height: dp(100)